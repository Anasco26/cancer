
<Dashboard>
    name: "dashboard"
    # on_enter: print(root)
    on_pre_enter: 
        root.on_start()
    MDNavigationLayout:
        ScreenManager:
            MDScreen:
                BoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        title: "Breast Cancer Diagnosing System"
                        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                        elevation: 3
                        md_bg_color: (0, 0, 1, 1)

                    MDFloatLayout:
                        
                        MDLabel:
                            text: "Select how you feel"
                            size_hint_y: .05
                            font_size: "14sp"
                            color: "red"
                            pos_hint: {'center_y': .95, 'center_x': .6}
                            valign: 'center'
                            bold: True
                        ScrollView:
                            pos_hint: {'center_y': .5, 'center_x': .5}
                            size_hint: .9, .95
                            bar_width: 0

                            MDList:
                                id: container
                                spacing: "5dp"
                               
                        
                        
                        MDFillRoundFlatIconButton:
                            size_hint: None, None
                            size: 100, 100
                            elevation_normal: 10
                            elevation_pressed: 12
                            pos_hint: {'center_x': .75, 'center_y': .1}
                            icon: "stethoscope"
                            text: 'Diagnose'
                            on_release:
                                root.start_spinner(self)



        MDNavigationDrawer:
            id: nav_drawer
            radius: (0, 16, 16, 0)
            # size_hint_x: .75

            MDNavigationDrawerMenu:
                MDNavigationDrawerHeader:
                    title: "BCDS"
                    text: ""
                    spacing: "4dp"
                    padding: ('12dp', 0, 0, '56dp')
                    source: "assets/images/favicon.ico"
                    color: "pink"
                
                MDNavigationDrawerDivider:
                
                MDNavigationDrawerItem:
                    icon: "home"
                    text: "Dashboard"
                    selected: True
                    on_release:
                        root.manager.transition.direction = "left"
                        root.manager.current = "dashboard"
                        nav_drawer.set_state("close")
                MDNavigationDrawerItem:
                    icon: "medical-bag"
                    text: "Previous Diagnoses"
                    selected: True
                    on_release:
                        root.manager.transition.direction = "left"
                        root.manager.current = "view"
                        nav_drawer.set_state("close")

                MDNavigationDrawerDivider:

                MDNavigationDrawerItem:
                    icon: "logout"
                    text: "Logout"
                    selected: True
                    on_release:
                        root.manager.transition.direction = "right"
                        root.manager.current = "HomePage"
                        nav_drawer.set_state("close")
                        root.unset_user()
                    

